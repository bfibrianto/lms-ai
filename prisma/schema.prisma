generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPER_ADMIN
  HR_ADMIN
  MENTOR
  LEADER
  EMPLOYEE
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum LessonType {
  VIDEO
  DOCUMENT
  TEXT
}

enum QuestionType {
  MULTIPLE_CHOICE
  ESSAY
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(EMPLOYEE)
  department    String?
  position      String?
  avatar        String?
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  courses               Course[]               @relation("CourseCreator")
  enrollments           Enrollment[]
  trainings             Training[]             @relation("TrainingCreator")
  trainingRegistrations TrainingRegistration[]
  createdPaths          LearningPath[]         @relation("PathCreator")
  pathEnrollments       PathEnrollment[]
  certificates          Certificate[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum EnrollmentStatus {
  ENROLLED
  IN_PROGRESS
  COMPLETED
  DROPPED
}

model Course {
  id            String        @id @default(cuid())
  title         String
  description   String?       @db.Text
  thumbnail     String?
  level         CourseLevel   @default(BEGINNER)
  status        CourseStatus  @default(DRAFT)
  creatorId     String
  creator       User          @relation("CourseCreator", fields: [creatorId], references: [id])
  modules       Module[]
  enrollments   Enrollment[]
  quizzes       Quiz[]
  learningPaths PathCourse[]
  certificates  Certificate[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("courses")
}

model Enrollment {
  id           String             @id @default(cuid())
  userId       String
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId     String
  course       Course             @relation(fields: [courseId], references: [id], onDelete: Cascade)
  status       EnrollmentStatus   @default(ENROLLED)
  progress     Int                @default(0)
  lastLessonId String?
  enrolledAt   DateTime           @default(now())
  completedAt  DateTime?
  updatedAt    DateTime           @updatedAt
  completions  LessonCompletion[]
  quizAttempts QuizAttempt[]

  @@unique([userId, courseId])
  @@map("enrollments")
}

enum TrainingType {
  WORKSHOP
  SEMINAR
  BOOTCAMP
}

enum TrainingStatus {
  DRAFT
  OPEN
  CLOSED
  COMPLETED
  CANCELLED
}

enum RegistrationStatus {
  REGISTERED
  ATTENDED
  ABSENT
  CANCELLED
}

model Training {
  id            String                 @id @default(cuid())
  title         String
  description   String?                @db.Text
  type          TrainingType
  status        TrainingStatus         @default(DRAFT)
  startDate     DateTime
  endDate       DateTime
  location      String?
  onlineUrl     String?
  capacity      Int?
  cover         String?
  creatorId     String
  creator       User                   @relation("TrainingCreator", fields: [creatorId], references: [id])
  registrations TrainingRegistration[]
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt

  @@map("trainings")
}

model TrainingRegistration {
  id           String             @id @default(cuid())
  userId       String
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  trainingId   String
  training     Training           @relation(fields: [trainingId], references: [id], onDelete: Cascade)
  status       RegistrationStatus @default(REGISTERED)
  registeredAt DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  @@unique([userId, trainingId])
  @@map("training_registrations")
}

model Module {
  id        String   @id @default(cuid())
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title     String
  order     Int      @default(0)
  lessons   Lesson[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("modules")
}

model Lesson {
  id          String             @id @default(cuid())
  moduleId    String
  module      Module             @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  title       String
  type        LessonType         @default(TEXT)
  content     String?            @db.Text
  videoUrl    String?
  fileUrl     String?
  duration    Int?
  order       Int                @default(0)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  completions LessonCompletion[]

  @@map("lessons")
}

model LessonCompletion {
  id           String     @id @default(cuid())
  enrollmentId String
  enrollment   Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  lessonId     String
  lesson       Lesson     @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  completedAt  DateTime   @default(now())

  @@unique([enrollmentId, lessonId])
  @@map("lesson_completions")
}

// ─── Quiz & Assessment ────────────────────────────────────────

model Quiz {
  id               String        @id @default(cuid())
  courseId         String
  course           Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title            String
  description      String?       @db.Text
  passingScore     Int           @default(70)
  duration         Int?
  maxAttempts      Int           @default(1)
  shuffleQuestions Boolean       @default(false)
  showResult       Boolean       @default(true)
  questions        Question[]
  attempts         QuizAttempt[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@map("quizzes")
}

model Question {
  id        String           @id @default(cuid())
  quizId    String
  quiz      Quiz             @relation(fields: [quizId], references: [id], onDelete: Cascade)
  type      QuestionType
  text      String           @db.Text
  points    Int              @default(1)
  order     Int              @default(0)
  options   QuestionOption[]
  answers   AttemptAnswer[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@map("questions")
}

model QuestionOption {
  id         String   @id @default(cuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  text       String
  isCorrect  Boolean  @default(false)
  order      Int      @default(0)

  @@map("question_options")
}

model QuizAttempt {
  id           String          @id @default(cuid())
  quizId       String
  quiz         Quiz            @relation(fields: [quizId], references: [id], onDelete: Cascade)
  enrollmentId String
  enrollment   Enrollment      @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  score        Int?
  passed       Boolean?
  startedAt    DateTime        @default(now())
  submittedAt  DateTime?
  answers      AttemptAnswer[]

  @@map("quiz_attempts")
}

model AttemptAnswer {
  id         String      @id @default(cuid())
  attemptId  String
  attempt    QuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  questionId String
  question   Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
  optionId   String?
  essayText  String?     @db.Text
  score      Int?
  feedback   String?     @db.Text

  @@map("attempt_answers")
}

// ─── Learning Path ────────────────────────────────────────

enum LearningPathStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model LearningPath {
  id           String             @id @default(cuid())
  title        String
  description  String?            @db.Text
  thumbnail    String?
  status       LearningPathStatus @default(DRAFT)
  creatorId    String
  creator      User               @relation("PathCreator", fields: [creatorId], references: [id])
  courses      PathCourse[]
  enrollments  PathEnrollment[]
  certificates Certificate[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  @@map("learning_paths")
}

model PathCourse {
  id        String       @id @default(cuid())
  pathId    String
  path      LearningPath @relation(fields: [pathId], references: [id], onDelete: Cascade)
  courseId  String
  course    Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  order     Int          @default(0)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@unique([pathId, courseId])
  @@map("path_courses")
}

model PathEnrollment {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  pathId      String
  path        LearningPath @relation(fields: [pathId], references: [id], onDelete: Cascade)
  enrolledAt  DateTime     @default(now())
  completedAt DateTime?
  updatedAt   DateTime     @updatedAt

  @@unique([userId, pathId])
  @@map("path_enrollments")
}

// ─── Certificate ────────────────────────────────────────

model Certificate {
  id       String        @id @default(cuid())
  userId   String
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId String?
  course   Course?       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  pathId   String?
  path     LearningPath? @relation(fields: [pathId], references: [id], onDelete: Cascade)
  issuedAt DateTime      @default(now())
  pdfUrl   String?

  // Biar memudahkan jika butuh validasi atau nge-revoked di kemudian hari
  isValid Boolean @default(true)

  @@map("certificates")
}
